
<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">What is your story?</h1>
    <%=form_tag("/posts/create") do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message|%>
            <div class="form-error">
              <%= message %>
            </div>
            <% end %>

          <textarea name="content"><%= @post.content%></textarea>
          <input class="principal-button" type="submit" value="Post">
        </div>
      </div>
    <% end %>
  </div>
</div>
